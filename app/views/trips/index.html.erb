<h1> These are all the available trips</h1>
<div class= "row">
 <table>

    <% @trips.each do |trip| %>
    
      <tr>
      	<td> Trip Number: </td>
      	<td><%= trip.id %></td>
      	<td><%= link_to 'Open ', trip_path(trip)  %></td>
      </tr>
      <tr>
      	<td> Source: </td>
      	<td><%= trip.source %></td>
      </tr>
      <tr>
      	<td> Destination: </td>
      	<td><%= trip.destination %></td>
      </tr>
    

    <% end %>
 </table>   
</div>

